{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ material.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ material.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ material.quantity }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ material.createdAt ? material.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('material_index') }}">back to list</a>

    <a href="{{ path('material_edit', {'id': material.id}) }}">edit</a>

    {{ include('material/_delete_form.html.twig') }}
{% endblock %}
