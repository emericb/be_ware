<div class="container">

    {% for material in materials %}

        <div id="{{ material.id }}" tabindex="-1" role="dialog" aria-labelledby="show" class="modal fade">
            <div role="document" class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h3 id="{{ material.id }}" class="modal-title">
                            Infos du produit</h3>
                        <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span
                                    aria-hidden="true">×</span></button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-striped table-bordered">
                            <tbody>
                            <tr>
                                <th>id</th>
                                <td>{{ material.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ material.name }}</td>
                            </tr>
                            <tr>
                                <th>Prix</th>
                                <td>{{ material.price }}</td>
                            </tr>
                            <tr>
                                <th>Quantité</th>
                                <td>{{ material.quantity }}</td>
                            </tr>
                            <tr>
                                <th>Date de création</th>
                                <td>{{ material.CreatedAt ? material.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="text-center">
                            <a class="btn btn-dark align-center" href="{{ path('material_edit', {'id': material.id}) }}">Modifier le produit</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    {% endfor %}

</div>